{
  "compilerOptions": {
    "target": "ES2018"
  , "module": "CommonJS"
  , "noImplicitOverride": true
  , "esModuleInterop": true
  , "strict": true
  , "skipLibCheck": true
  , "noUnusedLocals": false
  , "noUnusedParameters": false
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@views/*": ["src/views/*"]
    , "@pointers/*": ["src/pointers/*"]
    , "@objects/*": ["src/objects/*"]
    , "@literals/*": ["src/literals/*"]
    , "@utils/*": ["src/utils/*"]
    , "@test/*": ["__tests__/*"]
    }
  }
}
